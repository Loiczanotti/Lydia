<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_contact_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/base_margin_16"
    android:layout_marginTop="@dimen/base_margin_8"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/base_margin_8"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_contact_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/base_margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_16"
            android:layout_marginEnd="@dimen/base_margin_16"
            android:text="Prenom nom"
            android:gravity="start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/item_contact_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_contact_icon"
            app:layout_constraintTop_toTopOf="@id/item_contact_icon"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contact_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_16"
            android:layout_marginTop="@dimen/base_margin_4"
            android:layout_marginEnd="@dimen/base_margin_16"
            android:text="test@test.com"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/item_contact_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_contact_icon"
            app:layout_constraintTop_toBottomOf="@id/item_contact_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contact_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_16"
            android:layout_marginTop="@dimen/base_margin_4"
            android:layout_marginEnd="@dimen/base_margin_16"
            android:text="test@test.com"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/item_contact_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_contact_icon"
            app:layout_constraintTop_toBottomOf="@id/item_contact_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>