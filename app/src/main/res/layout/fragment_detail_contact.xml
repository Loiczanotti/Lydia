<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_detail_contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_detail_contact_image_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/base_margin_16"
                android:src="@drawable/ic_account_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_detail_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin_8"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/fragment_detail_contact_item_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_image_profile"
                tools:text="Loic ZANOTTI" />

            <include
                android:id="@+id/fragment_detail_contact_item_gender"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_name" />

            <include
                android:id="@+id/fragment_detail_contact_item_email"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_gender" />

            <include
                android:id="@+id/fragment_detail_contact_item_login"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_email" />


            <include
                android:id="@+id/fragment_detail_contact_item_location"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_login" />

            <include
                android:id="@+id/fragment_detail_contact_item_phone"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_location" />

            <include
                android:id="@+id/fragment_detail_contact_item_nat"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_phone" />

            <include
                android:id="@+id/fragment_detail_contact_item_dob"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_nat" />

            <include
                android:id="@+id/fragment_detail_contact_item_cell"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_dob" />


            <include
                android:id="@+id/fragment_detail_contact_item_registered"
                layout="@layout/contact_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_detail_contact_item_cell" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>